<?xml version="1.0" encoding="utf-8"?>
<com.dou361.ijkplayer.widget.IjkLinearLayout android:id="@+id/app_video_top_box"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="48dp"
              android:background="@drawable/top_bg"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/app_video_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:src="@drawable/play_back_white"/>

    <TextView
        android:id="@+id/app_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/app_video_loacl_stream_chapter_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/app_video_ComeFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:text="本地"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:visibility="gone"/>

        <!--<TextView-->
            <!--android:id="@+id/app_video_stream"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:clickable="true"-->
            <!--android:focusable="true"-->
            <!--android:padding="8dp"-->
            <!--android:text="标清"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="12dp"-->
            <!--android:visibility="visible"/>-->


        <ImageView
            android:id="@+id/app_video_chapter"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/play_chapt"
            android:padding="8dp"
            android:layout_marginRight="8dp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/app_video_stream"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/play_setting"
            android:padding="8dp"
            android:layout_marginRight="6dp"
            android:visibility="visible"/>

        <!--<TextView-->
            <!--android:id="@+id/app_video_chapter"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:clickable="true"-->
            <!--android:focusable="true"-->
            <!--android:padding="8dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:text="章节"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="12dp"-->
            <!--android:visibility="visible"/>-->

        <ImageView
            android:id="@+id/app_video_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alivc_hxsd_player_menu"
            android:visibility="gone" />
    </LinearLayout>

</com.dou361.ijkplayer.widget.IjkLinearLayout>
